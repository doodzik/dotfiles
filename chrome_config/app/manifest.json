{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "css": ["styles/style.css"],
      "js": ["scripts/onload.js"]
  }],
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  }
}
